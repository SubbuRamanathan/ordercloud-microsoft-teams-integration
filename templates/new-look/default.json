{
    "@context": "http://schema.org/extensions",
    "@type": "MessageCard",
    "originator": "",
    "hideOriginalBody": "true",
    "themeColor": "${themeColor}",
    "summary": "${title}",
    "sections": [{
        "activityTitle": "${title}",
        "activitySubtitle": "${subtitle}",
        "activityImage": "${image}",
        "facts": [{
            "name": "",
            "value": "<div><div style=\"overflow:hidden;position:absolute;right:0px;\"><img width=\"1\" height=\"1\" style=\"position:relative;opacity:0.4;display:block;\" src=\"${backgroundImageUrl}\"></img></div><div style=\"top: 0px;left: 0px;position: absolute;width: 100%;height: 100%;border: white 2px solid;\"></div></div>"
        },
        {
            "name": "",
            "value": "<div style=\"color:white\">.</div>"
        },
        {
            "name": "",
            "value": "<div style=\"color:white\">.</div>"
        },
        {
            "name": "",
            "value": "<div style=\"color:white\">.</div>"
        },
        {
            "name": "",
            "value": "<div style=\"position:absolute;left:18px;bottom:10px;\">${potentialActions}</div>"
        }],
        "markdown": true
    }]
}